// O(n+m)
setUnion :: forall a:Boxed, { Set a => Set a => { a => a => Ord } => Set a };
setUnion = { forall a:Boxed, s1 => s2 => cmp =>
  case (s1, s2)
    of ($SetTip, _) -> s2
    of (_, $SetTip) -> s1
    of _ -> setHedgeUnion! (None !) (None !) s1 s2 cmp
  end
};

// O(n+m)
setDifference :: forall a:Boxed, { Set a => Set a => { a => a => Ord } => Set a };
setDifference = { forall a:Boxed, s1 => s2 => cmp =>
  case (s1, s2)
    of ($SetTip, _) -> s1
    of (_, $SetTip) -> s1
    of _ -> setHedgeDiff! (None !) (None !) s1 s2 cmp
  end
};

// O(n+m)
setIntersection :: forall a:Boxed, { Set a => Set a => { a => a => Ord } => Set a };
setIntersection = { forall a:Boxed, s1 => s2 => cmp =>
  case (s1, s2)
    of ($SetTip, _) -> s1
    of (_, $SetTip) -> s2
    of _ -> setHedgeInter! (None !) (None !) s1 s2 cmp
  end
};

// O(n+m)
setIsSubsetOf :: forall a:Boxed, { Set a => Set a => { a => a => Ord } => Bool };
setIsSubsetOf = { forall a:Boxed, s1 => s2 => cmp =>
  REC go = { s1 => s2 =>
    case (s1, s2)
      of ($SetTip, _) -> True
      of (_, $SetTip) -> False
      of ($SetBin _ x l r, _) ->
        case setSplitMember x s2 cmp
          of (lt, found, gt) ->
            { both found (go l lt) } `andand` { go r gt }
        end
    end
  };
  { setSize s1 <=UWord setSize s2 } `andand` { go s1 s2 };
};

setSplit :: forall a:Boxed, { a => Set a => { a => a => Ord } => (Set a, Set a) };
setSplit = { forall a:Boxed, x => s => cmp =>
  case setSplitMember x s cmp
    of (lt, _, gt) -> (lt, gt)
  end
};

// O(lg n)
setSplitMember :: forall a:Boxed, { a => Set a => { a => a => Ord } => (Set a, Bool, Set a) };
setSplitMember = { forall a:Boxed, x => s => cmp =>
  case s
    of $SetTip -> (s, False, s)
    of $SetBin _ y l r ->
      case cmp x y
        of $LT -> case setSplitMember x l cmp of (lt, found, gt) -> (lt, found, setJoin y gt r) end
        of $EQ -> (l, True, r)
        of $GT -> case setSplitMember x r cmp of (lt, found, gt) -> (setJoin y l lt, found, gt) end
      end
  end
};

