type case Set (a:Boxed)
       of $SetBin Word a (Set a) (Set a)
       of $SetTip
       ;

setEmpty :: forall a:Boxed, { Set a };
setEmpty = { forall a:Boxed, SetTip ! };

// O(1)
setIsEmpty :: forall a:Boxed, { Set a => Bool };
setIsEmpty = { forall a:Boxed, s =>
  case s
    of $SetTip -> True
    of _       -> False
  end
};

// O(1)
setSingleton :: forall a:Boxed, { a => Set a };
setSingleton = { forall a:Boxed, e => SetBin 1 e (SetTip !) (SetTip !) };

// O(1)
setSize :: forall a:Boxed, { Set a => Word };
setSize = { forall a:Boxed, s =>
  case s
    of $SetTip          -> 0
    of $SetBin sz _ _ _ -> sz
  end
};


// O(?)
// Smart constructor which restores balance and size if necessary.
// Precondition: [[setsBalanced l r]]
setBin! :: forall a:Boxed, { a => Set a => Set a => Set a };
setBin! = { forall a:Boxed, x => l => r =>
  SetBin (1 +Word setSize l +Word setSize r) x l r
};

// O(?)
// Smart constructor which restores balance and size if necessary.
setJoin :: forall a:Boxed, { a => Set a => Set a => Set a };
setJoin = { forall a:Boxed, x => l => r =>
  case (l, r)
    of ($SetTip, _) -> setInsertMin x r
    of (_, $SetTip) -> setInsertMax x l
    of ($SetBin sl y ly ry, $SetBin sr z lz rz) ->
       if (setDelta !) *Word sl <UWord sr then setBalanceL z (setJoin x l lz) rz else
       if (setDelta !) *Word sr <UWord sl then setBalanceR y ly (setJoin x ry r) else
         setBin! x l r
       end
       end
  end
};

// O(lg n)
setMember :: forall a:Boxed, { Set a => a => { a => a => Ord } => Bool };
setMember = { forall a:Boxed, s => e => cmp =>
  REC go = { s =>
      case s
        of $SetTip           -> False
        of $SetBin _ elt l r ->
          case cmp e elt
            of $EQ -> True
            of $LT -> go l
            of $GT -> go r
          end
      end
  };
  go s;
};

// O(lg n)
// Find largest element smaller than the given one.
setLookupLT :: forall a:Boxed, { Set a => a => { a => a => Ord } => Maybe a };
setLookupLT = { forall a:Boxed, s => e => cmp =>
  REC goNone = { s =>
      case s
        of $SetTip           -> None !
        of $SetBin _ elt l r ->
          if isLT (cmp elt e)
            then goSome elt r
            else goNone l
          end
      end
  };
  REC goSome = { best => s =>
      case s
        of $SetTip           -> Some best
        of $SetBin _ elt l r ->
            if isLT (cmp elt e)
              then goSome elt  r
              else goSome best l
            end
      end
  };
  goNone s;
};

// O(lg n)
// Find smallest element greater than the given one.
setLookupGT :: forall a:Boxed, { Set a => a => { a => a => Ord } => Maybe a };
setLookupGT = { forall a:Boxed, s => e => cmp =>
  REC goNone = { s =>
      case s
        of $SetTip           -> None !
        of $SetBin _ elt l r ->
          if isGT (cmp elt e)
            then goNone l
            else goSome elt r
          end
      end
  };
  REC goSome = { best => s =>
      case s
        of $SetTip           -> Some best
        of $SetBin _ elt l r ->
            if isGT (cmp elt e)
              then goSome best l
              else goSome elt  r
            end
      end
  };
  goNone s;
};

// O(lg n)
// Find largest element smaller or equal to the given one.
setLookupLE :: forall a:Boxed, { Set a => a => { a => a => Ord } => Maybe a };
setLookupLE = { forall a:Boxed, s => e => cmp =>
  REC goNone = { s =>
      case s
        of $SetTip           -> None !
        of $SetBin _ elt l r ->
          case cmp elt e
            of $LT -> goSome elt r
            of $EQ -> Some elt
            of $GT -> goNone l
          end
      end
  };
  REC goSome = { best => s =>
      case s
        of $SetTip           -> Some best
        of $SetBin _ elt l r ->
          case cmp elt e
            of $LT -> goSome best l
            of $EQ -> Some elt
            of $GT -> goSome elt l
          end
      end
  };
  goNone s;
};

// O(lg n)
// Find smallest element greater or equal to the given one.
setLookupGE :: forall a:Boxed, { Set a => a => { a => a => Ord } => Maybe a };
setLookupGE = { forall a:Boxed, s => e => cmp =>
  REC goNone = { s =>
      case s
        of $SetTip           -> None !
        of $SetBin _ elt l r ->
          case cmp elt e
            of $LT -> goNone r
            of $EQ -> Some elt
            of $GT -> goSome elt l
          end
      end
  };
  REC goSome = { best => s =>
      case s
        of $SetTip           -> Some best
        of $SetBin _ elt l r ->
          case cmp elt e
            of $LT -> goSome best r
            of $EQ -> Some elt
            of $GT -> goSome elt l
          end
      end
  };
  goNone s;
};

// O(lg n)
// If an element is equivalent to one already in the set,
// the new element replaces the old one.
setInsert :: forall a:Boxed, { a => Set a => { a => a => Ord } => Set a };
setInsert = { forall a:Boxed, e : a => s => cmp =>
  REC go = { s =>
      case s
        of $SetTip           -> setSingleton e
        of $SetBin z elt l r ->
          case cmp e elt
            of $LT -> setBalanceL elt (go l) r
            of $EQ -> SetBin z e l r
            of $GT -> setBalanceR elt l (go r)
          end
      end
  };
  go s;
};

// TODO the e : a annotation is only needed due to a compiler bug (2013/03/15).

// O(lg n)
// If an element is equivalent to one already in the set,
// the original set is returned, not a new set.
setInsertR :: forall a:Boxed, { a => Set a => { a => a => Ord } => Set a };
setInsertR = { forall a:Boxed, e : a => s => cmp =>
  REC go = { s =>
      case s
        of $SetTip           -> setSingleton e
        of $SetBin _ elt l r ->
          case cmp e elt
            of $LT -> setBalanceL elt (go l) r
            of $EQ -> s
            of $GT -> setBalanceR elt l (go r)
          end
      end
  };
  go s;
};

// O(lg n)
// If an element is equivalent to one already in the set,
// the original set is returned, not a new set.
setDelete :: forall a:Boxed, { Set a => a => { a => a => Ord } => Set a };
setDelete = { forall a:Boxed, s => e => cmp =>
  REC go = { s =>
      case s
        of $SetTip           -> s
        of $SetBin _ elt l r ->
          case cmp e elt
            of $LT -> setBalanceR elt (go l) r
            of $EQ -> setGlue! l r
            of $GT -> setBalanceL elt l (go r)
          end
      end
  };
  go s;
};

////////////

setInsertMin :: forall a:Boxed, { a => Set a => Set a };
setInsertMin = { forall a:Boxed, x => s =>
  case s
    of $SetTip         -> setSingleton x
    of $SetBin _ y l r -> setBalanceL y (setInsertMin x l) r
  end
};

setInsertMax :: forall a:Boxed, { a => Set a => Set a };
setInsertMax = { forall a:Boxed, x => s =>
  case s
    of $SetTip         -> setSingleton x
    of $SetBin _ y l r -> setBalanceR y l (setInsertMax x r)
  end
};

