
type case Maybe (a:Type)
  of $Some a
  of $None
;

/////

// Partial.
unMaybe :: forall a:Type, { Maybe a => a };
unMaybe = { forall a:Type, x:Maybe a =>
  case x
    of $Some a -> a
    of $None   -> prim kill-entire-process "unMaybe-failed";
  end
};

isSome :: forall a:Type, { Maybe a => Bool };
isSome = { forall a:Type, x =>
  case x
    of $Some _ -> True
    of $None   -> False
  end
};
