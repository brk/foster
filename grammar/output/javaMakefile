FOSTER=C:/Users/Ben/Code/foster
ANTLRJAR=C:/Users/Ben/Code/antlrworks-1.3.1.jar

CP="$(ANTLRJAR);$(FOSTER)/grammar/output"

javac:
	javac -cp $(CP) fosterLexer.java
	javac -cp $(CP) fosterParser.java

antlr:
	java -jar $(ANTLRJAR) &

refresh: javac
	cp $(FOSTER)/grammar/output/foster*.class $(FOSTER)/grammar/

test: refresh
	java -cp $(CP) org.antlr.gunit.Interp $(FOSTER)/grammar/foster.gunit

gui: refresh
	java -cp $(CP) org.antlr.gunit.swingui.Tool $(FOSTER)/grammar/foster.gunit &
