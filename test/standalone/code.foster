// Imported from C code
frozzle :: { Int32 => () } @ { proc = True };

// Called by C code
do_something_eh = { x : Int32 => y : Int32 =>
  frozzle x;
  frozzle y;
  x +Int32 y
};

// Called by C code
loopy_but_not_allocating = { x : Int32 => y : Int32 =>
  REC go = { z =>
    if z ==Int32 0
      then ()
      else frozzle z;
           go (z -Int32 1);
    end
  };
  go (x +Int32 y);
};

