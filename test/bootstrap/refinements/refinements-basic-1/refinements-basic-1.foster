ret-true :: { % t : Bool : prim ==Bool t True };
ret-true = { True };

ret-false :: { % f : Bool : prim ==Bool f False };
ret-false = { False };

test-assert-bool-refined-alt = {
  tru = ret-true !;
  fls = ret-false !;

  expect_i1 True;
  print_i1 (__COMPILES__ prim assert-invariants tru);

  expect_i1 False;
  print_i1 (__COMPILES__ prim assert-invariants fls);
};
