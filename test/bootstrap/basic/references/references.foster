main = {
  simpler   !;
  capture   !;
  ref-if    !;
  tuprefs1  !;
  tuprefs2  !;
  ref-until !;
  hof-until !;

  expect_i1 False; print_i1 (__COMPILES__ 0 >^ 0);
  expect_i1 False; print_i1 (__COMPILES__ let r = (ref 0); in r >^ r end);
};


tuprefs1 = {
  t = ((ref opaquely_i32 1), (ref 2));
  expect_i32 1;
  case t of (r, _) -> print_i32 r^ end;
};

tuprefs2 = {
  r = (ref (1, 2, 3, 4));
  expect_i32 4;
  case r^ of (_, _, _, x) -> print_i32 x end;
  expect_i32 14;
  (11, 12, 13, 14) >^ r;
  case r^ of (_, _, _, x) -> print_i32 x end;
};

simpler = {
  r = (ref 0);

  expect_i32 0;
   print_i32 r^;
  3 >^ r;
  expect_i32 3;
   print_i32 r^;
};

capture = {
  r = (ref 0);
  f = { r^ };

  2 >^ r;
  expect_i32 2;
   print_i32 (f !);
};

ref-if = {
  r = if 2 ==Int32 (opaquely_i32 2) then (ref 0) else (ref 1) end;
  expect_i32 0;
   print_i32 r^;
};

hof-until-if = { c : {Bool} => b : { () } =>
  if c ! then () else let j0 = b !; in hof-until-if c b end
  end
};

hof-until-case = { c : {Bool} => b : { () } =>
  case c !
    of True ->  ()
    of False -> let j0 = b !; in hof-until-case c b end
  end
};

hof-until = {
  r = (ref 16);
  expect_i32 16;
  expect_i32 15;
  expect_i32 14;
  hof-until-if   { r^ ==Int32 13 } {
            print_i32 r^; (r^ -Int32 1) >^ r;
  };
  expect_i32 13;
  expect_i32 14;
  expect_i32 15;
  hof-until-case { r^ ==Int32 16 } {
            print_i32 r^; (r^ +Int32 1) >^ r;
  };
};

ref-until = {
  expect_i32 3;
  expect_i32 3;
  expect_i32 2;
  expect_i32 1;
  r = (ref opaquely_i32 3);
  print_i32 r^;
  until r^ ==Int32 0 then
    print_i32 r^;
    (r^ -Int32 1) >^ r;
  end
};

