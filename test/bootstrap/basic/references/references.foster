newDArray32 = { n : i32 => f : { i32 => i32 } =>
  let a = allocDArray32 n;
      x = (ref n);
   in
      until x^ == 0 then
          f x^      >^ a[x^ - 1];
           (x^ - 1) >^ x
      end;
    a
  end
};

arrays = {
  let a = newDArray32 2 { n : i32 => n };
   in
      expect_i32 2;
     print_i32 a[opaquely_i32 1];
  end
};

hof-until-if = { c : {i1} => b : { () } =>
  if c () then 0 else let j0 = b (); in hof-until-if c b end
  end
};

hof-until-case = { c : {i1} => b : { () } =>
  case c ()
    of true ->  0
    of false -> let j0 = b (); in hof-until-case c b end
  end
};

hof-until = {
  let r = (ref 6);
   in expect_i32 6;
      expect_i32 5;
      expect_i32 4;
      hof-until-if   { r^ == 3 } { print_i32 r^; (r^ - 1) >^ r; };
      expect_i32 3;
      expect_i32 4;
      expect_i32 5;
      hof-until-case { r^ == 6 } { print_i32 r^; (r^ + 1) >^ r; };
  end
};

