hof-while = { t : {i1} => b : { i32 } =>
  if t () then b (); hof-while t b
          else 0 end
};

main = {
  variant-one();
  variant-two();
};

variant-one = {
  expect_i32 0;
  expect_i32 1;
  expect_i32 2;
  let v = (ref 0);
      n = opaquely_i32 3;
   in
     hof-while { v^ <Int32 n } {
       print_i32 v^ ; (v^ +Int32 1) >^ v ; 0
     }
     ; opaquely_i32 4
  end
};

variant-two = {
  expect_i32 0;
  expect_i32 1;
  expect_i32 2;
  let v = (ref 0);
      n = opaquely_i32 3;
   in
     hof-while { v^ <Int32 n } {
       print_i32 v^ ; (v^ +Int32 1) >^ v ; 0
     }
      ; opaquely_i32 4 // TODO removing this breaks things!
  end
};

